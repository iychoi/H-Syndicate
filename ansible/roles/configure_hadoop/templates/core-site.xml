<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<!-- Put site-specific property overrides in this file. -->

<configuration>
	<property>
		<name>fs.default.name</name>
		<value>hdfs://{{ groups['hadoop'][0] }}:8020</value>
	</property>
	<property>
		<name>hadoop.tmp.dir</name>
		<value>{{ work_root }}/hdfs_data/temp</value>
	</property>
    <!-- H-Syndicate -->
	<property>
		<name>fs.hsyn.impl</name>
		<value>hsyndicate.hadoop.dfs.HSyndicateDFS</value>
		<description>hsyn protocol mapping for H-Syndicate.</description>
	</property>
	<property>
		<name>fs.hsyndicate.hosts</name>
		<value>{{ groups['hadoop']|join(',') }}</value>
	</property>
	<property>
		<name>fs.hsyndicate.port</name>
		<value>{{ ugport }}</value>
	</property>
</configuration>
